
<div class="project-show-container">

  <div class="project-show-informations-panel" id="js-cards-list">
    <%= render 'shared/card', card: @project %>
    <div class="show-flex-two">
      <div class="financial-indicators-show">
        <h3>Key project indicators</h3>
        <div class="icon-container-show estimated-roi-show">
          <p>Estimated ROI</p>
          <i class="fas fa-chart-line icon-show"></i> <strong> <%= @project.roi_decimals / 100.0 %> % </strong>
        </div>
        <div class="icon-container-show">
          <p>Panel Type</p>
          <i class="fas fa-solar-panel"></i> <strong><%= @project.panel_watt %> Watts </strong>
        </div>
        <div class="icon-container-show">
          <p>Total Panels</p>
          <i class="fas fa-sitemap"></i> <strong><%= @project.panels_quantity %> </strong>
        </div>
        <div class="icon-container-show">
          <p>Project Power</p>
          <i class="fas fa-battery-full"></i> <strong><%= @project.kwc %> kWc </strong>
        </div>
        <div class="icon-container-show">
          <p>Start Date</p>
          <i class="far fa-calendar-alt"></i> <strong><%= @project.comissioning_date %> </strong>
        </div>
      </div>
    </div>

    <div class="show-flex-four">
      <h3> Detailed description </h3>
      <p><%= @project.long_description %><p>
      </div>
      <div class="show-flex-five">
        <h3> Location </h3>
        <div id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>">
      </div>
    </div>
    <div class="button-back-showpage">
      <%= link_to "Back", :back, class:"btn btn-goback" %>
    </div>
  </div>

  <div class="project-show-investment-panel">
    <div class="show-flex-three">
      <h3>Start investing now!</h3>
      <div class="icon-container-show" id="price-of-selected-panels">
        <p> Price per panel </p>
        <strong> <%= humanized_money_with_symbol(@project.price) %></strong>
      </div>
      <div class="icon-container-show" id="available-panels">
        <p> Available for purchase </p>
        <strong> <%= @project.available_panels %> panels </strong>
      </div>
      <div class="icon-container-show">
        <div class="investment-content-invest_action">
          <%= render "investments/form", project: @project, investment: @investment, class:"investment-form" %>
        </div>
      </div>
    </div>
  </div>
</div>
