<div class="navbar-solarize" id="navbar">
  <!-- Logo -->
  <div class="navbar-solarize-logo-and-brand">
    <div class="navbar-solarize-logo">
      <%= icon("fas", "solar-panel") %>
    </div>
    <div class="navbar-solarize-brand">
      <%= link_to "SolarizeMe", root_path, class: "navbar-solarize-brand" %>
    </div>
  </div>

 <!-- Right Navigation -->
  <% current_page?(projects_path)? "active" : "" %>
  <div class="navbar-solarize-right hidden-xs hidden-sm">
    <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link #{current_page?(projects_path)? "active" : ""}", id: "navbar-all-projects" %>
    <!-- Dropdown list appearing on mobile onlyhidden-xs hidden-sm -->
    <% if user_signed_in? %>
      <%= link_to "My dashboard", user_path(current_user), class: "navbar-solarize-item navbar-solarize-link #{current_page?(user_path(current_user))? "active" : ""}", id: "navbar-dashboard"%>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <%= icon("fa", "sign-out-alt") %> <%= t(".sign_out", default: "Log out") %>
      <% end %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class:"navbar-solarize-item navbar-solarize-link" %>
    <% end %>
  </div>

  <!-- mobile only -->
  <div class="navbar-solarize-item hidden-md hidden-lg ">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-solarize-dropdown-menu">
        <li>
          <%= link_to "All projects", projects_path, class: "navbar-solarize-item navbar-solarize-link" %>
        </li>
        <% if user_signed_in? %>
          <li>
            <%= link_to "My dashboard", user_path(current_user), class: "navbar-solarize-item navbar-solarize-link" %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= icon("fa", "sign-out-alt") %> <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to "Login", new_user_session_path, class:"navbar-solarize-item navbar-solarize-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

